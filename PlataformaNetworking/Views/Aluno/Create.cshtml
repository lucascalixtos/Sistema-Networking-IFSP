@model PlataformaNetworking.Models.Aluno
@using PlataformaNetworking.Models.Enums

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/Login.css">

<h2>Create</h2>

<h4>Aluno</h4>
<hr />
<div class="login">
    <div class="cardLogin">
        <form asp-action="Create" class="formLogin">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Curso" class="control-label"></label>
                <input asp-for="Curso" class="form-control" />
                <span asp-validation-for="Curso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoIngresso" class="control-label"></label>
                <input asp-for="AnoIngresso" class="form-control" />
                <span asp-validation-for="AnoIngresso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Habilidades" class="control-label"></label>
                <input asp-for="Habilidades" class="form-control" />
                <span asp-validation-for="Habilidades" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curriculo" class="control-label"></label>
                <input asp-for="Curriculo" class="form-control" />
                <span asp-validation-for="Curriculo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sobrenome" class="control-label"></label>
                <input asp-for="Sobrenome" class="form-control" />
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-sm-4 colLabel">
                    <label asp-for="Situacao" class="control-label">Situação</label>
                </div>
                <div class="col-sm-8">
                    <select asp-for="Situacao" asp-items="Html.GetEnumSelectList<Situacao>()" class="form-control" required>
                        <option selected="selected" value="" disabled>Selecione...</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
