@model IEnumerable<PlataformaNetworking.Models.ViewModels.HomeViewModel>

@{
    ViewData["Title"] = "View";
}


@{
    foreach (var item in Model)
    {
        <div class="card gedf-card mt-2">
            <div class="card-body">
                <h5 class="card-title">Pedido de Amizade</h5>
                <p class="card-text">
                    <div class="mr-2">
                        <img class="rounded-circle" width="100" src="@item.Usuario.ProfilePictureUrl" alt="">
                    </div>
                </p>
                <h6 class="card-subtitle mb-2 text-muted">@item.Usuario.Nome @item.Usuario.Sobrenome</h6>
                <a href="@Url.Action("AceitaSolicitacaoAmizade", "Usuarios", new { id = item.Amizade.Id})" class="card-link">Aceitar</a>
                <a href="#" class="card-link">Recusar</a>
            </div>
        </div>
    }
}


