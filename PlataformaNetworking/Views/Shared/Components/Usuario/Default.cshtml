
    <div class="card-body">

        <p class="w3-center">
            <div class=" containerPerfil" id="triggerUploadClick">
                <img src="@(Model.Usuario.ProfilePictureUrl == null ? "/images/avatar2.png" : Model.Usuario.ProfilePictureUrl)" class="rounded-circle imagemPerfil" alt="Avatar" id="imagemPerfilAlterar">
                <div class="overlay">
                    <a href="#" class="icon" title="User Profile">
                        <i class="fa fa-camera"></i>
                    </a>
                </div>
                <input type="file" name="uploadFotoPerfil" class="d-none" accept="image/png, image/jpeg" id="campoUploadImagem" />
            </div>
        </p>
        <div class="formAlterarImagemUsuario d-none">
            <form method="post" id="formAlterarImagem">
                <input name="ProfilePictureUrl" id="campoInputNovaImagem" type="text" value="@Model.Usuario.ProfilePictureUrl" />
            </form>
        </div>
        <div class="h5">@Model.Usuario.Nome @Model.Usuario.Sobrenome</div>
        <div class="h7 text-muted">@Model.Usuario.GetType().Name</div>
    </div>



