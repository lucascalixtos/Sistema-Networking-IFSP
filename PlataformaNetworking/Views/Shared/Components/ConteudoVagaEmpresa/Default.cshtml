@model IEnumerable<PlataformaNetworking.Models.Vaga>

@{
    ViewData["Title"] = "View";
   
}




@foreach (var item in Model.Reverse())
{

<div class="card gedf-card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex justify-content-between align-items-center">

                <div class="ml-2">
                    <div class="h5 m-0">@item.Titulo</div>
                </div>
            </div>
            <div>

                <div class="dropdown">
                    <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-ellipsis-h"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
                        <div class="h6 dropdown-header">Configuration</div>
                        <a class="dropdown-item" asp-controller="Vaga" asp-action="DeletarVaga" asp-route-idVaga=@item.Id>Apagar</a>

                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center">

            <div class="ml-2">
                <div class="h5 m-0">
                    Adicionar Conhecimento:
                    @await Component.InvokeAsync("HabilidadeVaga", new { id = item.Id })
                    <span class="badge badge-dark" id="adicionarHabilidadeVaga">+</span>
                    <div class="row mt-2">
                        <form method="post" id="formNewHabilidadeVaga" style="display:none">
                            <div class="col-md-5">
                                <input type="text" class="form-control" name="IdVaga" id="IdVaga" value="@item.Id" style="display:none" />
                                <input type="text" class="form-control" name="NomeHabilidade" id="NomeHabilidade" />
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-secondary">Adicionar</button>
                            </div>
                        </form>
                    </div>
                    
                </div>

            </div>
        </div>

    </div>
    <div class="card-body">
        <div class="text-muted h7 mb-2"> <i class="fa fa-clock-o"></i>@item.DataPostagem.ToString("dd/MM/yyyy HH:mm")</div>
        <p class="card-text">
            @item.Conteudo
        </p>


    </div>
    <div class="card-footer">
        <a class="btn btn-primary" href="@Url.Action("ListaCandidatosVaga", "Home", new { idVaga = item.Id})">Ver Candidaturas</a>
        <a href="#" class="card-link"><i class="fa fa-comment"></i> Comentar</a>
    </div>
</div>
 }



