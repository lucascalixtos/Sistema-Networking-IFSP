@model IEnumerable<PlataformaNetworking.Models.PostModel>

@{
    ViewData["Title"] = "View";
}


@foreach (var item in Model.Reverse())
{

    <div class="card gedf-card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="mr-3">
                        <img class="rounded-circle" width="50" src="@(item.FotoUsuario  == null ? "~/images/avatar2.png" : item.FotoUsuario)" alt="">
                    </div>
                    <div class="ml-2">
                        <div class="h5 m-0">@item.NomeUsuario</div>
                    </div>
                </div>
                <div>
                    <div class="dropdown">
                        <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-ellipsis-h"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
                            <div class="h6 dropdown-header">Configuration</div>
                            <a class="dropdown-item" href="#">Save</a>
                            <a class="dropdown-item" href="#">Hide</a>
                            <a class="dropdown-item" href="#">Report</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="card-body">
            <div class="text-muted h7 mb-2"> <i class="fa fa-clock-o"></i>@item.PostTime.ToString("dd/MM/yyyy HH:mm")</div>
            <p class="card-text">
                @item.TextoPost
            </p>
            <img src="@item.Imagem" style="width:100%" alt="Post Image" class="w3-margin-bottom">

        </div>
        <div class="card-footer">
            <i class="fa fa-gittip"></i><a href="#" class="card-link" onclick="Like(@item.Id)">Curtir</a>
            <span class="card-link" id="comentar"><i class="fa fa-comment"></i> Comentar</span>
            <div class="row mt-2">
                <form method="post" id="formComentario" style="display:none">
                    <input type="hidden" id="IdPost" name="IdPost" value="@item.Id" />
                    <div class="col-md-5">
                        <input type="text" class="form-control" name="CommentText" id="CommentText" />
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary">Comentar</button>
                    </div>
                </form>
            </div>
            <a href="#" class="card-link"><i class="fa fa-mail-forward"></i>Compartilhar</a>
            <p>
                <span class="glyphicon glyphicon-thumbs-up card-link"></span> @item.Like
                <span class="glyphicon glyphicon-comment card-link"></span> 0
                <span class="glyphicon glyphicon-share card-link"></span> 0
            </p>

        </div>
    </div>
}

<script>
    async function Like(idPost) {
    var parametros = {
        IdPost: idPost
    };

    $.ajax({
        datatype: 'json',
        contentType: "application/json",
        type: "POST",
        url: "/Publicacoes/Like",
        data: JSON.stringify(parametros),
        async: true,
        success: function (data) {
            document.location.reload();
        }
    });
}

$('body').on('submit', '#formComentario', function (evt) {
    evt.preventDefault();
    $.ajax({
        url: '/Publicacoes/Comentario',
        type: 'post',
        data: $('#formComentario').serialize(),
        success: function () {
            document.location.reload();
        }
    });
});

$("#comentar").click(function () {
    $("#formComentario").show();
});
</script>
